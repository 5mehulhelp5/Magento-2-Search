<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="unbxd_recommendation" class="Unbxd\SearchJs\Block\Recommendation\RecommendationList" is_email_compatible="true"
            placeholder_image="Unbxd_SearchJs::images/products_list.png" ttl="86400">
        <label translate="true">Unbxd Recommendation Products List</label>
        <description translate="true">List of Recommended Products</description>
        <parameters>
             <parameter name="widget_type" xsi:type="select" visible="true" required="true" sort_order="10">
                <label translate="true">Page Type</label>
                <options>
                    <option name="Home" value="HOME" selected="true">
                        <label>Home Page</label>
                    </option>
                    <option name="Category" value="CATEGORY">
                        <label>Category Page</label>
                    </option>
                    <option name="Product" value="PRODUCT">
                        <label>Product Page</label>
                    </option>
                     <option name="Cart" value="CART">
                        <label>Cart Page</label>
                    </option>
                </options>
            </parameter>
            <parameter name="widget_container" xsi:type="select" visible="true" required="true" sort_order="20">
                <label translate="true">Widget Container</label>
                <options>
                    <option name="widget1" value="widget1" selected="true">
                        <label>Widget 1</label>
                    </option>
                    <option name="widget2" value="widget2">
                        <label>Widget 2</label>
                    </option>
                    <option name="widget3" value="widget3">
                        <label>Widget 3</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
